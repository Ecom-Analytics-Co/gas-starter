{
  "name": "_PROJECT_REPO_NAME_",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomanalytics/_PROJECT_REPO_NAME_.git"
  },
  "bugs": {
    "url": "https://github.com/ecomanalytics/_PROJECT_REPO_NAME_/issues"
  },
  "scripts": {
    "clean": "del-cli -f ./dist",
    "build:client": "parcel build src/client/index.html --no-source-maps --no-cache",
    "build:server": "copyfiles -a -f src/server/* ./dist",
    "prettify": "prettier --write --tab-width 2 --single-quote 'src/**/*.js' 'src/**/*.html'",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "push": "copyfiles config.js appsscript.json ./dist && clasp push",
    "deploy": "npm run build && npm run push",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@parcel/transformer-sass": "^2.0.0-nightly.632",
    "@types/google-apps-script": "^1.0.20",
    "@types/google.script.client-side": "^0.1.0",
    "babel-preset-env": "^1.7.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^3.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "parcel": "^2.0.0-nightly.630",
    "prettier": "^2.2.1",
    "sass": "^1.32.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify"
    }
  }
}
